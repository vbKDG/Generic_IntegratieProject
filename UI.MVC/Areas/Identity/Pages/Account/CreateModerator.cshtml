@page
@model CreateModeratorModel
@{
    ViewData["Title"] = "New Moderator";
}

  <div class="dark-overlay">
                <div class="home-inner container">
                        <div class="card bg-light card-form">
                            <div class="card-body">
                            <form method="post">
                                    <h3><b>Create Moderator account.</b></h3>
                                    <hr />
                                    <div class="row">
                                        <div class="col">
                                            <div class="form-group">
                                                <h4><b>Profile</b></h4>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group">
                                                <h4><b>Account</b></h4>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">

                                        <div class="col col-md-3">
                                            <div class="form-group">
                                                 <label asp-for="Input.FirstName"></label>
                                                 <input asp-for="Input.FirstName" class="form-control" />
                                                 <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                                                                            
                                            </div>
                                        </div>
                                        <div class="col col-md-3">

                                            <div class="form-group">
                                                <label asp-for="Input.LastName"></label>
                                                <input asp-for="Input.LastName" class="form-control" />
                                               <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group">
                                                <label asp-for="Input.Email"></label>
                                                 <input asp-for="Input.Email" class="form-control" />
                                                 <span asp-validation-for="Input.Email" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col col-md-3">

                                            <div class="form-group">
           <select asp-for="Input.Gender" class="form-control">
                                                            <option class="dropdown-item" selected disabled value="U">Unknown</option>
                                                            <option class="dropdown-item" value="M">Man</option>
                                                            <option class="dropdown-item" value="V">Women</option>
           </select> 
                                                
                                            </div>
                                        </div>
                                        <div class="col col-md-3">
                                            <div class="form-group">
                                                                                            <input asp-for="Input.Age" class="form-control" placeholder="Age" />
                                                                                            <span asp-validation-for="Input.Age" class="text-danger"></span>
                                                                                            
                                            </div>
                                        </div>
                                        <div class="col col">
                                            <div class="form-group">
                                                                                            <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                                                                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col col-md-3">

                                            <div class="form-group">
                                                                                           <input asp-for="Input.PostalCode" class="form-control" placeholder="Postal code" />
                                                                                           <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col col-md-3">
                                            <div class="form-group">

                                            </div>
                                        </div>

                                        <div class="col">
                                            <div class="form-group">
                                                                                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                                                                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col">
                                            <button type="submit" class="btn btn-success"><b>Create Account</b></button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
