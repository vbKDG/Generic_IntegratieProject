@page
@model RegisterModel

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="~/js/checkIfOrganisation.js" asp-append-version="true"></script>

@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Gender"></label>
                <div>
                    <select asp-for="Input.Gender" class="form-control">
                        <option class="dropdown-item" selected disabled value="U">Unknown</option>
                        <option class="dropdown-item" value="M">Man</option>
                        <option class="dropdown-item" value="V">Women</option>
                    </select> 
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Age"></label>
                <input asp-for="Input.Age" class="form-control" />
                <span asp-validation-for="Input.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PostalCode"></label>
                <input asp-for="Input.PostalCode" class="form-control" />
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Is this account in name of an organisation?</label>
                <div>
                    <select id="organisation" class="form-control">
                        <option class="dropdown-item" value="false">No</option>
                        <option class="dropdown-item" value="true">Yes</option>
                    </select> 
                </div>
            </div>
            <div id="organisationInfo">
                <div class="form-group">
                    <label asp-for="Input.OrganisationName"></label>
                    <input asp-for="Input.OrganisationName" class="form-control" />
                    <span asp-validation-for="Input.OrganisationName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.OrganisationEventInput"></label>
                    <input asp-for="Input.OrganisationEventInput" class="form-control" />
                    <span asp-validation-for="Input.OrganisationEventInput" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
