@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<body id="login">
    <div class="row center-block">
        
            <div class="dark-overlay">
                <div class="container">

                        <div class="col-lg-4">
                            <div class="card bg-light text-center card-form">
                                <div class="card-body">
                                    <h3><b>Sign in</b></h3>
                                    <form id="account" method="post">
                                        <h4>Use a local account to log in.</h4>
                                        <hr />
                                        
                                        <div class="form-group text-dark">
                                            <label asp-for="Input.Email"></label>
                                            <input asp-for="Input.Email" class="form-control" placeholder="*email" />
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group text-dark">
                                            <label asp-for="Input.Password"></label>
                                            <input asp-for="Input.Password" class="form-control" placeholder="*password" />
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group text-dark">
                                            <div class="checkbox">
                                                <label asp-for="Input.RememberMe">
                                                    <input asp-for="Input.RememberMe" />
                                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                                </label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-dark">Log in</button>
                                        </div>
                                        <div class="form-group">
                                            <p>
                                                <a class="text-dark" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                            </p>
                                            <p>
                                                <a class="text-dark" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                            </p>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        

