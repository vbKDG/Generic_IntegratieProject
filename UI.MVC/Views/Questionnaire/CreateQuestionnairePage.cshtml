@using Domain
@model QuestionnaireQuestion

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="~/js/dynamicForm.js" asp-append-version="true"></script>


<body>
<a class="previousButton" onclick="previousPage()">&laquo; Previous</a>
@using (Html.BeginForm("CreateQuestionnaire", "Questionnaire", FormMethod.Post))
{
    <div class="row justify-content-md-center">
        <div class="card bg-light card-form col-md-4">
            <div class="card-body">
                <h2>Create a new questionnaire</h2>
                <table class="table">
                    <input asp-for="ProjectId" type="hidden">
                    <tr class="form-group">
                        <td>
                            <label>What is the name of your questionnaire?</label>
                            <input asp-for="Questionnaire.Name" class="form-control" type="text" placeholder="Name">
                        </td>
                    </tr>
                    <tr class="form-group">
                        <td>
                            <label>Add questions to your new questionnaire:</label>
                            <div>
                                <button class="btn btn-success" type="button" id="btnAddField">Add Question</button>
                            </div>
                            @Html.AntiForgeryToken()
                            <div id="fields"></div>
                        </td>
                    </tr>

                    <tr class="form-group py-2">
                        <td>
                            <input type="submit" value="Create new questionnaire" class="btn btn-success"/>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
}
</body>