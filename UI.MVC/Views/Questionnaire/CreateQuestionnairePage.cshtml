@using Domain
@model QuestionnaireQuestion

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="~/js/dynamicForm.js" asp-append-version="true"></script>
<body>

@using (Html.BeginForm("CreateQuestionnaire", "Questionnaire", FormMethod.Post))
{
    <div class="row center-block">
        
        <div class="dark-overlay">
            <div class="container">
            
                <div class="col-lg-6">
                    <div class="card bg-light text-center card-form">
                        <h1>Create a new questionnaire</h1>
                        <div class="card-body">

                            <tr>
                                <td><input asp-for="ProjectId" type="hidden"></td>
                            </tr>
                            <tr>
                                <td>
                                    <h4>What is the name of your questionnaire?</h4>
                                    <input asp-for="Questionnaire.Name" type="text">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h4>Add questions to your new questionnaire:</h4>
                                    <div class="py-3">
                                        <button type="button" id="btnAddField">Add Question</button>
                                    </div>
                                    @Html.AntiForgeryToken()
                                    <div id="fields"></div>
                                </td>
                            </tr>
    
                            <div class="form-group py-2">
                                <input type="submit" value="Create new questionnaire" class="btn btn-success"/>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
}
</body>