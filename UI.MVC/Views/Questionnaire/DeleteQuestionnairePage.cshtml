@using Domain
@model Questionnaire

<h1>Delete Questionnaire</h1>

@using (Html.BeginForm("DeleteQuestionnaire", "Questionnaire", FormMethod.Post))
{
    <h3>Are you sure you want to delete this questionnaire?</h3>
    <h4>This will remove all the collected data as well!</h4>
    <h5>The questionnaire is about: @Model.name</h5>
    <input asp-for="id" type="hidden">
    <div class="form-group">
        <input type="submit" value="Delete Questionnaire" class="btn btn-default"/>
    </div>
}