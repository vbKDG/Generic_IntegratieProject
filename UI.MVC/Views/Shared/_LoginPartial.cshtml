@using DAL.EF
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="~/js/logoutForm.js" asp-append-version="true"></script>

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item py-5">
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <p class="text-dark">
                <i class="far fa-user"></i><b> @User.Identity.Name </b>
            </p>
        </a>
    </li>
    
    <li class="nav-item py-4">
        <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})"></form>
        <a href="#" class="nav-link" id="logoutLink" title="Logout">
            <p class="text-dark">
                <i class="far fa-user"></i><b class="underlineText"> Logout </b>
            </p>
        </a>
    </li>
}
else
{
    <li class="nav-item py-4">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
            <p class="text-dark">
                <i class="far fa-user"></i><b class="underlineText"> Register </b>
            </p>
        </a>
    </li>
    <li class="nav-item py-4">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
            <p class="text-dark">
                <i class="far fa-user"></i><b class="underlineText"> Log in </b>
            </p>
        </a>
    </li>
}