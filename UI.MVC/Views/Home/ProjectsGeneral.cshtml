@model IEnumerable<@Domain.Project>
@{
    ViewData["Title"] = "Overzicht";
}


<body id="projectsgeneral" class="container-fluid">







<div class="text-center">
    <h2 id="projecttitlepadding" class="text-dark"> In Development</h2>
</div>
        
<div id="projecttitlepadding" class="row">    
    @foreach (var project in @Model)
    {

        @if (project.startDate > DateTime.Now)
         {
             <div class="col-md-4">
                 <div class="col-md-16">
                     <div class="textWithBlurredBg">
                         <img src="@project.imageField.GetImageString()"/>
                         <div class="text-center">
                             <h3 class="text-light">@project.name</h3>
                             <h4 class="text-light">@project.description</h4>
                         </div>
                     </div>
                     <div  class="progress center-block">
                         <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" style="width:60%">
                         </div>
                     </div>

                     <div>
                         <p class="text-dark">
                             <i class="far fa-heart fa-lg"></i> 5
                             <i class="far fa-comments fa-lg"></i> 6
                             <i class="fas fa-share-alt fa-lg"></i> 8
                         </p>
                     </div>
                 </div>
             </div>
         }
    }
</div>

<div class="text-center">
    <h2 id="projecttitlepadding" class="text-dark"> Ongoing projects</h2>
</div>
        
      <div id="projectelementpadding" class="row center-block">    
            @foreach (var project in @Model)
            {

                @if (project.startDate < DateTime.Now && DateTime.Now < project.endDate)
                 {
                     <div class="col-md-6">
                         <div class="col-md-12">
                             <div class="textWithBlurredBg">
                                 <img src="@project.imageField.GetImageString()"/>
                                 <div class="text-center">
                                     <h3 class="text-light">@project.name</h3>
                                     <h4 class="text-light">@project.description</h4>
                                 </div>
                             </div>
                             
                             <div class="progress center-block">
                                 <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" style="width:30%">
                                 </div>
                             </div>

                             <div>
                                 <p class="text-dark">
                                     <i class="far fa-heart fa-lg"></i> 5
                                     <i class="far fa-comments fa-lg"></i> 6
                                     <i class="fas fa-share-alt fa-lg"></i> 8
                                 </p>
                             </div>
                         </div>
                     </div>
                 }
            }
        </div>


<div class="text-center">
    <h2 id="projecttitlepadding" class="text-dark"> Closed projects</h2>
</div>
        
      <div class="row">    
            @foreach (var project in @Model)
            {

                @if (project.endDate < DateTime.Now)
                 {
                     <div class="col-md-3">
                         <div class="col-md-16">
                             <div class="textWithBlurredBg">
                                 <img src="@project.imageField.GetImageString()"/>
                                 <div class="text-center">
                                     <h3 class="text-light">@project.name</h3>
                                     <h4 class="text-light">@project.description</h4>
                                 </div>
                             </div>
                             <div  class="progress center-block">
                                 <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" style="width:100%">
                                 </div>
                             </div>

                             <div>
                                 <p class="text-dark">
                                     <i class="far fa-heart fa-lg"></i> 5
                                     <i class="far fa-comments fa-lg"></i> 6
                                     <i class="fas fa-share-alt fa-lg"></i> 8
                                 </p>
                             </div>
                         </div>
                     </div>
                 }

            }
        </div>

</body>