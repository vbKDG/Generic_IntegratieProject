@model IEnumerable<Domain.Project>

<h1>Projects</h1>

<table class="table">
    <tr>
        <th>
            <p>Name</p>
        </th>
        <th>
            <p>Description</p>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.ActionLink("Questionnaires", "Questionnaires", "Questionnaire"
                    , new { projectId=item.projectId })
            </td>
            <td>
                @Html.ActionLink("Ideations", "Project", "Project"
                    , new { id=item.projectId })
                
            </td>
        </tr>
    }
</table>