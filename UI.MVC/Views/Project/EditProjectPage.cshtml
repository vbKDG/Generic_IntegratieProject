@model D.UI.MVC.Models.Projects.ProjectVM

<link rel="stylesheet" href="~/css/createProjectCustimize.css">
<script src="~/js/projectPage.js" asp-append-version="true"></script>

@{
    var rowCount = 0;
}
<a class="previousButton" onclick="previousPage()">&laquo; Previous</a>
<body>
    <form asp-controller="Project" asp-action="EditProject" method="post" enctype="multipart/form-data">

        <section id="contact" class="py-3 text-light">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card p-4 bg-dark">
                            <div class="card-body">
                                <h3 class="text-center text-light">Edit a project</h3>
                                <hr>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <input asp-for="ProjectId" type="hidden" class="form-control" placeholder="Title"/>
                                            <input asp-for="Name" type="text" class="form-control" placeholder="Title"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <input asp-for="StartDate" type="date" class="form-control" placeholder="Start date" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <input asp-for="EndDate" type="date" class="form-control" placeholder="End date" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <input asp-for="Description" type="text" textarea class="form-control" placeholder="Description" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    @Html.EditorFor(x => x.MapFieldVM)
                                </div>

                                <h3 class="text-center text-light">Phases</h3>
                                <hr>
                                <label asp-for="Name">Name: </label>
                                <label asp-for="Description">Description: </label>
                                <label asp-for="StartDate">Start Date: </label>
                                <label asp-for="EndDate">End Date: </label>

                                <div class="text-dark" id="phaseList">
                                    @foreach (var phase in Model.Phases)
                                    {
                                        <div class="phaseRow">
                                            <input asp-for="@phase.Name" name="Phases[@rowCount].name" type="text" class="nameType"/>
                                            <input asp-for="@phase.Description" name="Phases[@rowCount].description" type="text" class="descriptionType"/>
                                            <input asp-for="@phase.StartDate" name="Phases[@rowCount].startDate" type="date" class="startDateType"/>
                                            <input asp-for="@phase.EndDate" name="Phases[@rowCount].endDate" type="date" class="endDateType"/>
                                            <a href="javascript:void(0);" class="remRow">Remove</a>
                                        </div>
                                        rowCount++;
                                    }
                                </div>
                                
                                <input type="button" name="addRow" id="addRow" value="Add" class="btn bg-success btn-sm">
                                
                                <h3 class="text-center text-light">Settings</h3>
                                <hr>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <input asp-for="SettingVm.SettingId" type="hidden" class="form-control" placeholder="Title"/>
                                            <label>Primaire color:</label>
                                            <select asp-for="SettingVm.BackGroundColor1">
                                                <option class="standard" value="">Standard</option>
                                                <option class="blue" value="blue">Blue</option>
                                                <option class="red" value="red">Red</option>
                                                <option class="green" value="green">Green</option>
                                                <option class="yellow" value="yellow">Yellow</option>
                                                <option class="orange" value="orange">Orange</option>
                                                <option value="white">White</option>
                                            </select><br>
                                            <label>Secondary color:</label>
                                            <select asp-for="SettingVm.BackGroundColor2">
                                                <option class="standard" value="">Standard</option>
                                                <option class="blue" value="blue">Blue</option>
                                                <option class="red" value="red">Red</option>
                                                <option class="green" value="green">Green</option>
                                                <option class="yellow" value="yellow">Yellow</option>
                                                <option class="orange" value="orange">Orange</option>
                                                <option value="white">White</option>
                                            </select><br>
                                            <label>Font family:</label>
                                            <select asp-for="SettingVm.FontFamily">
                                                <option value="">Standard</option>
                                                <option id="times" value="Times new Roman">Times new Roman</option>
                                                <option id="arial" value="Arial">Arial</option>
                                                <option id="comic" value="Comic Sans MS">Comic Sans MS</option>
                                                <option id="trebuchet" value="Trebuchet MS">Trebuchet MS</option>
                                                <option id="impact" value="Impact">Impact</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <input type="submit" value="Submit" class="btn bg-success btn-sm">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
</body>