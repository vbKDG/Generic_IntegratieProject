@model Domain.Project
<body>
<a class="previousButton" onclick="previousPage()">&laquo; Previous</a>
<div class="container">
    
<div class="container">
    <div class="row center-block">
        <div class="dark-overlay">
            <div class="container">
                
                <div class="col-lg-9">
                    <div class="card bg-light card-form">
                        <div class="text-center">
                            <h1 class="display-4">@Model.Name</h1>
                            <h4>Manage ideations</h4>
                        </div>
                        <div class="card-body">

                            <table class="table">
                                <tr>
                                    <th>
                                        <p>Central question</p>
                                    </th>

                                </tr>
                                        @foreach (var item in Model.Ideations)
                                        {
                                            <tr>
                                                <td>
                                                    @if (item.Questions.Count > 0)
                                                    {
                                                        @item.Questions.ToList()[0].Question
                                                    }
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Create Idea", "CreateIdeaPage", "Idea"
                                                        , new {ideationId = item.IdeationId})
                                                </td>
                                
                                                <td>
                                                    @Html.ActionLink("Show ideas", "Ideation", "Idea"
                                                        , new {ideationId = item.IdeationId})
                                                </td>
                                                @if (item.Closed)
                                                {
                                                    <td>
                                                        @Html.ActionLink("Open", "OpenIdeation", "Idea"
                                                            , new {ideationId = item.IdeationId})
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>
                                                        @Html.ActionLink("Close", "CloseIdeation", "Idea"
                                                            , new {ideationId = item.IdeationId})
                                                    </td>
                                                }
                                            </tr>
                                        }
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3" id="bodyadmin">
                    <div class="card text-center bg-primary text-white mb-3">
                        <div class="card-body">
                            <h3>Add Ideation</h3>
                            <h4 class="display-4">
                                <i class="fas fa-pencil-alt"></i>
                            </h4>
                            
                            <div class="btn btn-success btn-lg" onclick="location.href = '@Url.Action("CreateIdeationPage", "Project"
                                                                                                                                         , new {projectId = @Model.ProjectId})'">+


                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

</div>

  
</div>
</body>