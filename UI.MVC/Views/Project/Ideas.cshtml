@model IEnumerable<Domain.Idea>

<h1>Projects</h1>

<table class="table">
    <tr>
        <th>
            <p>User</p>
        </th>
        <th>
            <p>Title</p>
        </th>
        
        <th>Content</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.user.firstName.Substring(0,1).@Html.DisplayFor(modelItem => item.user.lastName)
            
           
                          
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ideaId)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.ideaId)
            </td>
        </tr>
    }
    
    
</table>
