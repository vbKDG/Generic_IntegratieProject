@using DAL.EF
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@model Task<IList<DAL.EF.ApplicationUser>>

@{
    ViewData["Title"] = "Manage admins";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<h4>Here is a list of all the administrators</h4>

<p>
    <a asp-area="Identity" asp-page="/Account/CreateAdmin">Create a new Admin</a> 
</p>
    
<table class="table">
    <tr>
        <th>
            <p>Firstname</p>
        </th>
        <th>
            <p>Lastname</p>
        </th>
        <th>
            <p>Email</p>
        </th>
    </tr>
    @foreach (var item in Model.Result)
    {
        <tr>
            <td>
                <p>@item.FirstName</p>
            </td>
            <td>
                <p>@item.LastName</p>
            </td>
            <td>
                <p>@item.Email</p>
            </td>
            <td>
                @Html.ActionLink("Edit", "EditAdminPage", "Admin"
                    , new {userId = item.Id}) | 
                @Html.ActionLink("Delete", "DeleteAdminPage", "Admin"
                    , new {userId = item.Id})
            </td>
        </tr>
    }
</table>